<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CoursesFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/txtlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="155dp"
            android:src="@drawable/univ_txt_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/courses_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtlogo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="ExtraText">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="394dp"
                    android:layout_height="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/courses_scrollview"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/cc"
                    tools:ignore="NotSibling" />"/>
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="394dp"
                    android:layout_height="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageButton1"
                    android:layout_marginTop="20dp"
                    tools:src="@tools:sample/backgrounds/scenic" />
                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="394dp"
                    android:layout_height="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageButton2"
                    android:layout_marginTop="20dp"
                    tools:src="@tools:sample/backgrounds/scenic" />
                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="394dp"
                    android:layout_height="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageButton3"
                    android:layout_marginTop="20dp"
                    tools:src="@tools:sample/backgrounds/scenic" />
                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="394dp"
                    android:layout_height="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageButton4"
                    android:layout_marginTop="20dp"
                    tools:src="@tools:sample/backgrounds/scenic" />
                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="394dp"
                    android:layout_height="124dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageButton5"
                    android:layout_marginTop="20dp"
                    tools:src="@tools:sample/backgrounds/scenic" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>