<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TimeTableFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timetable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- University Logo -->
        <ImageView
            android:id="@+id/txtlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/univ_txt_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Semester 5 Button -->
        <Button
            android:id="@+id/semester5_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#007BA7"
            android:text="Semestre 5"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            app:layout_constraintTop_toBottomOf="@+id/txtlogo" />

        <!-- Semester 6 Button -->
        <Button
            android:id="@+id/semester6_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#007BA7"
            android:text="Semestre 6"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/txtlogo" />

        <!-- Empty View -->
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No timetable data available"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Horizontal ScrollView -->
        <HorizontalScrollView
            android:id="@+id/timetable_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/guideline14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Days Header Row -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="#E0E0E0">

                    <!-- Empty block for Time Column -->
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:background="@drawable/cell_border"
                        android:backgroundTint="#E0E0E0"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp" />

                    <!-- Days columns - Each with consistent 100dp width -->
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Sa"
                        android:textStyle="bold"
                        android:background="#E0E0E0"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Sun"
                        android:textStyle="bold"
                        android:background="#E0E0E0"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Mon"
                        android:textStyle="bold"
                        android:background="#E0E0E0"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Tue"
                        android:textStyle="bold"
                        android:background="#E0E0E0"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Wed"
                        android:textStyle="bold"
                        android:background="#E0E0E0"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Thu"
                        android:textStyle="bold"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- TableLayout for timetable content -->
                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:stretchColumns="*">
                        <!-- Table content will be added programmatically -->
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Guidelines -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>